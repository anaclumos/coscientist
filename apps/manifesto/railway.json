{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bunx turbo run build --filter=@coscientist/manifesto",
    "watchPatterns": ["/apps/manifesto/**"]
  },
  "deploy": {
    "startCommand": "bun run --filter=@coscientist/manifesto start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
